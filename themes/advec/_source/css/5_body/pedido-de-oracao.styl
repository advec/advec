.pdo-form
  display flex
  aligm-items center
  justify-content center
  padding-top 2em
  padding-bottom 2em
  width 100%

  &__container
    max-width 700px
    width 85%

    &__title
      display flex
      justify-content center
      align-items center
      text-align center

      h1
        color $red
        font-weight bold

.pdo-header
    display flex
    align-items center
    height 70vh
    flex-direction column
    background white
    box-sizing border-box
    background url("/assets/images/back/section/quemsomos__a.jpg")
    background-size cover
    background-position center center
    position relative
    overflow hidden
    +above('sm')
        flex(center, center, col)

    &__container
        width 85%
        +above('xs')
            display flex
            align-items center
            justify-content center

        &__block
            display inline-block
            padding-top 6.5em
            padding-bottom 4em
            max-width 880px
            width 100%

            &__title
                +above('xs')
                    text-align center

                h1
                    color white
                    font-weight bold

            &__text
                padding-top 1em
                +above('xs')
                    text-align center

                p
                    color white
