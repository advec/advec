.bemvindo
  background white
  flex(center, center, row)
  padding-top 8em
  padding-bottom 8em

  &__container
    color $gray-darker
    max-width 511px
    text-align center
    width 75%

    &__block
      &:after
        display block
        font-family FontAwesome
        content "\f107"
        font-style normal
        font-weight 300
        font-size 2rem
        text-decoration inherit
        margin-top 2em
        color $gray-dark

      &__text
        h2
          margin-bottom 1.5em

      &__button
        display flex
        flex-direction column
        justify-content center
        align-items center
        +above('lg')
          flex-direction row

        .btn--black
          margin-bottom 1em
          +above('lg')
            margin-bottom 0

          &:first-child
            +above('lg')
              margin-right 1em

