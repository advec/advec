.evento
  height 100vh
  box-sizing border-box
  flex(center, center, col)
  position relative
  overflow visible
  +above('sm')
    height 38vh
    flex(center, center, row)

  &__block
    background-size cover
    background-position center center
    display flex
    justify-content center
    align-items flex-end
    height 65%
    width 100%
    position relative
    overflow hidden
    +above('sm')
      height 100%
      order 1

    &__overlay
      background linear-gradient(to bottom, rgba(0,0,0,0) 0%,rgba(0,0,0,0.45) 100%)
      width 100%
      height 100%
      position absolute
      top 0
      left 0
      z-index 1

    &__container
      width 75%
      height auto
      position relative
      z-index 2
      margin-bottom 2em
      +above('sm')
        margin-bottom 4em
        width 60%

      &__col
        &__title
          color white
          margin-bottom 1em

          h2
            font-weight 500

        &__text
          color white
          margin-bottom 1em

        &__button
          text-align center
          +above('sm')
            text-align center

