.swiper
  height 100vh !important
  color $white
  text-align left
  display flex
  overflow hidden

  .swiper-pagination-progressbar
    background #db0a2b !important

  &__container
    display flex
    align-items center
    justify-content center
    width 100%
    height 100vh

    .swiper-wrapper
      .swiper-slide
        background-size cover
        background-position center center
        display flex
        justify-content center
        align-items center

        &__infos
          display flex
          justify-content center
          flex-direction column

          &__title
          &__description
          &__button
            display flex
            justify-content center
            text-align center
            
            h1
              font-weight 600

          &__button
            margin-top 2.5em

//
// 2. Section
// -----------------------------------

.bemvindo
  background white
  flex(center, center, row)
  padding-top 8em
  padding-bottom 8em

  &__container
    color $gray-darker
    max-width 511px
    text-align center
    width 75%

    &__block
      &:after
        display block
        font-family FontAwesome
        content "\f107"
        font-style normal
        font-weight 300
        font-size 2rem
        text-decoration inherit
        margin-top 2em
        color $gray-dark

      &__text
        h2
          margin-bottom 1.5em

      &__button
        display flex
        flex-direction column
        justify-content center
        align-items center
        +above(1050px)
          flex-direction row

        .btn--black
          margin-bottom 1em
          +above(1050px)
            margin-bottom 0

          &:first-child
            +above(1050px)
              margin-right 1em

.prsilas
  background url("/assets/images/back/section/prsilasmalafaia.jpg")
  background-size cover
  background-position 73% 10%

.avec
  background linear-gradient(to right, #ff5f6d, #ffc371)
  background-size cover
  background-position center center
  display flex
  align-items center
  justify-content center
  height 100%
  width 100%

  &__slide
    display flex
    align-items center
    justify-content center
    height 50%
    max-width 650px
    padding-top 4vh
    padding-bottom 4vh
    width 90%
    img
      width 100%

.ebd
  .double
    &__background
      background url("/assets/images/back/section/ebd.png")
      background-size cover
      background-position center center

.batismo
  background url("/assets/images/back/section/batismo__a.png")
  background-size cover
  background-position center center

.fazerparte
  .double
    &__background
      background url("/assets/images/back/section/amareservir.png")
      background-size cover
      background-position center center

.oferta
  background url("/assets/images/back/section/oferta_home.jpg")
  background-size cover
  background-position 30% center

.evento
  lost-center 100%
  width 100%

  &__block
    background-size cover
    background-position center center
    padding-bottom .8rem
    padding-top .8rem
    lost-align center
    width 100%
    +above(760px)
      padding-bottom 2.3rem
      padding-top 2.3rem
      width calc(100% / 2)

    &__overlay
      display absolute
      height 100%
      width 100%
      z-index 1

    &__container
      display flex
      align-items center
      height 14rem
      max-width 500px
      width 75%

      &__col
        img
          width 100%

.oracao
  background white
  box-sizing border-box
  flex(center, center, col)
  height 100vh
  +above(760px)
    flex(center, center, row)
    height 60vh
    padding-bottom 0

  &__container
    width 75%
    height auto
    position relative
    z-index 0
    +above(760px)
      width 40%

    &__col
      &__icon
      &__title
      &__text
      &__button
        text-align left
        +above(760px)
          text-align center

      &__title
        color $red
        margin-bottom 2em

        h2
          font-weight 500

      &__button
        padding-top 1em

.teste
  color white
  background white
  padding-bottom 1rem
  width 100%

  .item
    background-size cover
    background-position center center
    lost-align center
    padding 1.5rem
    box-shadow 0 1px 1px 0 rgba(0,0,0,.2)
    margin-bottom 1rem
    width 200px
    border-radius 4px
    position relative
    overflow hidden
    transform translate(0, 0px);
    transition all .4s
    +above(520px)
      width 450px

    &:hover
      box-shadow inset 0px 0px 0px 1px rgba(0, 0, 0, .25)
      transform translate(0, 4px);

    .cont
      display flex
      justify-content center
      align-items center
      flex-direction column
      height 140px
      +above(520px)
        height 210px

      .title
        text-align center
        h2
          font-weight 500

      .text-support
        margin-top .5rem

        p
          font-weight 500
          font-size responsive

      img
        width 100%
