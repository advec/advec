.popup
    align-items center
    justify-content center
    z-index 4 /* Sit on top */
    left 0
    top 0
    width 100% /* Full width */
    height 100% /* Full height */
    overflow auto /* Enable scroll if needed */


    /* Modal Content/Box */
    &__content
        background-color #fefefe
        position relative
        overflow hidden
        display flex
        justify-content center
        align-items center


        /* The Close Button */
        &__close
            color #aaa
            position absolute
            top 0
            right .4em
            font-size 28px
            font-weight bold

            &:hover
              color black
              text-decoration none
              cursor pointer

        &__list
          display flex
          justify-content space-between
          align-items center
          flex-wrap wrap
          width 80%

          &__item
            min-width 200px
            padding-top 1em
            padding-bottom 1em
            h2
              font-weight bold
              margin-bottom .3em
